<link rel="stylesheet" href="/css/home.css">
<div id="home-variable">
    <aside id="left-side">
        <%if(locals.user){%>
        <h3>Friends</h3>
        <div id="friends-list">
            <% for(u of users){ %>
            <p><a href="/user/profile/<%= u.id %>"><%= u.name %></a></p>
            <%}%>
        </div>
        <%}%>
    </aside>
    <main id="mid-side">
        <div id="home-header">
            <h1>Welcome to our website</h1>
        </div>
        <%if(locals.user){%>
        <form action="/post/create" id="post-form" method="POST">
            <textarea name="content" id="post-content" cols="30" rows="3" placeholder="Type Here"></textarea>
            <input type="submit" id="post-submit-btn">
        </form>
        <%}%>
        <div id="post-container">
            <% for(post of posts){ %>
                <%- include('_post') -%>
            <%}%>
        </div>
    </main>
</div>


        